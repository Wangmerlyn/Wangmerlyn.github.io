---
import { type CollectionEntry, render } from "astro:content";

import Masthead from "@/components/blog/Masthead.astro";
import TOC from "@/components/blog/TOC.astro";
import WebMentions from "@/components/blog/webmentions/index.astro";

import BaseLayout from "./Base.astro";

interface Props {
	post: CollectionEntry<"post">;
}

const { post } = Astro.props;
const { ogImage, title, description, updatedDate, publishDate } = post.data;
const socialImage = ogImage ?? `/og-image/${post.id}.png`;
const articleDate = updatedDate?.toISOString() ?? publishDate.toISOString();
const { headings, remarkPluginFrontmatter } = await render(post);
const readingTime: string = remarkPluginFrontmatter.readingTime;
---

<BaseLayout
	meta={{
		articleDate,
		description,
		ogImage: socialImage,
		title,
	}}
>
	<article class="grow break-words" data-pagefind-body>
		<div id="blog-hero" class="mb-12"><Masthead content={post} readingTime={readingTime} /></div>
		<div class="grid gap-10 lg:grid-cols-[minmax(0,1fr)_18rem] lg:items-start">
			<div
				class="prose prose-sm prose-headings:font-semibold prose-headings:text-accent-2 prose-headings:before:absolute prose-headings:before:-ms-4 prose-headings:before:text-gray-600 prose-headings:hover:before:text-accent sm:prose-headings:before:content-['#'] sm:prose-th:before:content-none article-body"
			>
				<slot />
				<WebMentions />
			</div>
			<aside
				class="flex flex-col gap-8 lg:sticky lg:top-12 lg:self-start lg:text-sm lg:text-zinc-600 dark:lg:text-zinc-300"
				aria-label="Page extras"
			>
				{!!headings.length && (
					<div class="toc-block">
						<TOC headings={headings} />
					</div>
				)}
				<div id="footnote-rail" class="footnote-rail hidden space-y-4 lg:block" aria-label="Footnotes"></div>
			</aside>
		</div>
	</article>
	<button
		class="hover:border-link fixed end-4 bottom-8 z-90 flex h-10 w-10 translate-y-28 cursor-pointer items-center justify-center rounded-full border-2 border-transparent bg-zinc-200 text-3xl opacity-0 transition-all transition-discrete duration-300 data-[show=true]:translate-y-0 data-[show=true]:opacity-100 sm:end-8 sm:h-12 sm:w-12 dark:bg-zinc-700"
		data-show="false"
		id="to-top-btn"
	>
		<span class="sr-only">Back to top</span>
		<svg
			aria-hidden="true"
			class="h-6 w-6"
			fill="none"
			focusable="false"
			stroke="currentColor"
			stroke-width="2"
			viewBox="0 0 24 24"
			xmlns="http://www.w3.org/2000/svg"
		>
			<path d="M4.5 15.75l7.5-7.5 7.5 7.5" stroke-linecap="round" stroke-linejoin="round"></path>
		</svg>
	</button>
</BaseLayout>

<script>
	const scrollBtn = document.getElementById("to-top-btn") as HTMLButtonElement;
	const targetHeader = document.getElementById("blog-hero") as HTMLDivElement;

	function callback(entries: IntersectionObserverEntry[]) {
		entries.forEach((entry) => {
			// only show the scroll to top button when the heading is out of view
			scrollBtn.dataset.show = (!entry.isIntersecting).toString();
		});
	}

	scrollBtn.addEventListener("click", () => {
		document.documentElement.scrollTo({ behavior: "smooth", top: 0 });
	});

	const observer = new IntersectionObserver(callback);
	observer.observe(targetHeader);

	// Move rendered markdown footnotes into the right rail on desktop while keeping them inline on mobile.
	const articleBody = document.querySelector(".article-body") as HTMLDivElement | null;
	const footnotes = articleBody?.querySelector("section.footnotes") as HTMLElement | null;
	const footnoteRail = document.getElementById("footnote-rail") as HTMLDivElement | null;
	const tocBlock = document.querySelector(".toc-block") as HTMLDivElement | null;

	if (articleBody && footnotes && footnoteRail) {
		const placeholder = document.createComment("footnotes-placeholder");
		footnotes.parentNode?.insertBefore(placeholder, footnotes);

		const mq = window.matchMedia("(min-width: 1024px)");
		const GAP_PX = 12;

		const alignRailToFirstRef = () => {
			if (!mq.matches) return;
			const firstRef = articleBody.querySelector(
				"a.footnote-ref, sup[id^='fnref'] a, sup[id^='fnref'] > a",
			) as HTMLElement | null;
			if (!firstRef) return;
			// measure baseline position without previous adjustments
			footnoteRail.style.marginTop = "0px";
			const railTop = footnoteRail.getBoundingClientRect().top;
			const refTop = firstRef.getBoundingClientRect().top;
			let desiredMargin = refTop - railTop; // negative -> raise, positive -> lower

			if (tocBlock) {
				const tocBottom = tocBlock.getBoundingClientRect().bottom;
				const minMargin = tocBottom + GAP_PX - railTop; // keep below TOC + gap
				desiredMargin = Math.max(desiredMargin, minMargin);
			}

			footnoteRail.style.marginTop = `${Math.round(desiredMargin)}px`;
		};

		const moveToRail = () => {
			footnoteRail.hidden = false;
			footnoteRail.replaceChildren(footnotes);
			footnotes.classList.add("footnotes--rail");
			alignRailToFirstRef();
		};

		const moveBackInline = () => {
			footnoteRail.hidden = true;
			footnotes.classList.remove("footnotes--rail");
			placeholder.parentNode?.insertBefore(footnotes, placeholder.nextSibling);
			footnoteRail.replaceChildren();
			footnoteRail.style.marginTop = "0px";
		};

		const handleChange = (event: MediaQueryListEvent | MediaQueryList) => {
			if (event.matches) {
				moveToRail();
				return;
			}
			moveBackInline();
		};

		mq.addEventListener("change", handleChange);
		handleChange(mq);
		window.addEventListener("resize", alignRailToFirstRef);

		let ticking = false;
		window.addEventListener(
			"scroll",
			() => {
				if (ticking) return;
				ticking = true;
				requestAnimationFrame(() => {
					alignRailToFirstRef();
					ticking = false;
				});
			},
			{ passive: true },
		);
	}
</script>
